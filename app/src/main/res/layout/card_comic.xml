<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">

        <com.nkanaev.comics.view.ComicLayout
                android:id="@+id/comicLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="4"
                android:orientation="vertical"
                android:background="@color/light">

                <com.nkanaev.comics.view.CoverImageView
                        android:id="@+id/comicImageView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:adjustViewBounds="true"
                        android:background="@color/dark"/>

                <TextView
                        android:id="@+id/comicTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="20sp"
                        android:lines="2"/>

                <TextView
                        android:id="@+id/comicPagerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="@dimen/grid_padding"
                        android:paddingRight="@dimen/grid_padding"
                        android:paddingStart="@dimen/grid_padding"
                        android:paddingEnd="@dimen/grid_padding"
                        android:paddingBottom="@dimen/grid_padding"
                        android:gravity="bottom|start"
                        android:textColor="@color/text"/>

        </com.nkanaev.comics.view.ComicLayout>

</android.support.v7.widget.CardView>